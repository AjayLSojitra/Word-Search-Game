{
  "name": "Word Search Game",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "TAMAGUI_TARGET=native expo start --clear --dev-client",
    "start:test": "TAMAGUI_TARGET=native APP_VARIANT=test expo start --clear --dev-client",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "TAMAGUI_TARGET=web expo start --web --clear -p 19006",
    "web:test": "TAMAGUI_TARGET=web APP_VARIANT=test expo start --web --clear -p 19006",
    "build:web": "TAMAGUI_TARGET=web expo export --clear -p web",
    "build:web:test": "APP_VARIANT=test TAMAGUI_TARGET=web expo export --clear -p web",
    "build:web:beta": "APP_VARIANT=beta TAMAGUI_TARGET=web expo export --clear -p web",
    "build:web:production": "APP_VARIANT=production TAMAGUI_TARGET=web expo export --clear -p web",
    "serve:web": "npx serve dist -l 19006 --single",
    "dev-client-local:ios": "eas build --profile development-simulator --platform ios --local",
    "dev-client-local:android": "eas build --profile development --platform android --local",
    "eas-update:test": "TAMAGUI_TARGET=native APP_VARIANT=test eas update --branch=test",
    "eas-update:beta": "TAMAGUI_TARGET=native APP_VARIANT=beta eas update --branch=beta",
    "eas-update:production": "TAMAGUI_TARGET=native APP_VARIANT=production eas update --branch=production",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@babel/preset-env": "^7.24.0",
    "@bacons/css-to-expo-linear-gradient": "^1.3.0",
    "@callstack/react-theme-provider": "^3.0.9",
    "@expo-google-fonts/poppins": "^0.2.3",
    "@expo/config-plugins": "~9.0.0",
    "@hookform/resolvers": "^3.3.4",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-firebase/app": "^21.14.0",
    "@shopify/flash-list": "1.7.3",
    "@tamagui/animations-react-native": "^1.91.4",
    "@tamagui/babel-plugin": "^1.91.4",
    "@tamagui/config": "^1.91.4",
    "@tamagui/lucide-icons": "^1.91.4",
    "@tamagui/theme-base": "^1.91.4",
    "@tamagui/use-force-update": "^1.91.4",
    "@types/react": "~18.2.65",
    "@types/react-lottie": "^1.2.10",
    "@types/react-native": "~0.72.8",
    "@types/react-test-renderer": "^18.0.7",
    "babel-plugin-macros": "^3.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "deepmerge": "^4.3.1",
    "expo": "^52.0.46",
    "expo-application": "~6.0.2",
    "expo-av": "~15.0.2",
    "expo-blur": "~14.0.3",
    "expo-build-properties": "~0.13.2",
    "expo-clipboard": "~7.0.1",
    "expo-constants": "~17.0.8",
    "expo-dev-client": "~5.0.20",
    "expo-device": "~7.0.3",
    "expo-font": "~13.0.4",
    "expo-haptics": "~14.0.1",
    "expo-image": "~2.0.7",
    "expo-keep-awake": "~14.0.3",
    "expo-linear-gradient": "~14.0.2",
    "expo-linking": "~7.0.5",
    "expo-random": "~13.6.0",
    "expo-router": "~4.0.20",
    "expo-sharing": "~13.0.1",
    "expo-splash-screen": "~0.29.24",
    "expo-status-bar": "~2.0.1",
    "expo-tracking-transparency": "~5.1.1",
    "expo-updates": "~0.27.4",
    "expo-web-browser": "~14.0.2",
    "firebase": "^11.6.0",
    "lottie-ios": "^4.5.0",
    "lottie-react-native": "^7.2.2",
    "moti": "^0.28.1",
    "native-base": "^3.4.28",
    "onesignal-expo-plugin": "^2.0.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.51.0",
    "react-modal": "^3.16.1",
    "react-native": "0.76.9",
    "react-native-device-info": "^10.13.1",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-get-random-values": "~1.11.0",
    "react-native-google-mobile-ads": "^15.1.0",
    "react-native-in-app-review": "^4.3.3",
    "react-native-modal": "^13.0.1",
    "react-native-onesignal": "^5.1.0",
    "react-native-reanimated": "~3.16.1",
    "react-native-reanimated-carousel": "^3.5.1",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.4.0",
    "react-native-select-dropdown": "^4.0.1",
    "react-native-svg": "15.8.0",
    "react-native-toast-message": "^2.2.0",
    "react-native-view-shot": "~4.0.3",
    "recoil": "^0.7.7",
    "reflect-metadata": "~0.2.1",
    "tamagui": "^1.91.4",
    "typescript": "^5.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.65",
    "babel-plugin-transform-inline-environment-variables": "^0.4.4",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "jest-expo": "^50.0.3",
    "relay-compiler": "^16.2.0",
    "testcontainers": "^10.7.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "jest": {
    "preset": "jest-expo",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e/",
      "__generated__"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.{test.ts,test.tsx}",
      "!**/coverage/**",
      "!**/gql-queries/**",
      "!**/__generated__/**",
      "!**/node_modules/**",
      "!**/babel.config.js",
      "!**/jest.setup.js",
      "!tamagui.config.ts",
      "!**/assets/**"
    ],
    "moduleNameMapper": {
      "^@design-system/(.*)$": "<rootDir>/design-system/$1",
      "^@assets/(.*)$": "<rootDir>/assets/$1",
      "^@modules/(.*)$": "<rootDir>/modules/$1",
      "^@events/(.*)$": "<rootDir>/events/$1",
      "^@utils/(.*)$": "<rootDir>/utils/$1"
    }
  },
  "private": true
}
